<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display for the result -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="216dp"
        android:layout_height="44dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="605dp"
        android:text="Calculator "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#03A9F4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="425dp"
        android:background="#50907A"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textSize="32sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:layout_marginTop="16dp"
            android:columnCount="4"
            android:rowCount="5">

            <!-- Number and operation buttons -->
            <Button
                android:id="@+id/btn7"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="7"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn8"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="8"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn9"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="9"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnDivide"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="/"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn4"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="4"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn5"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="5"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn6"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="6"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnMultiply"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="*"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn1"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="1"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn2"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="2"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn3"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/white"
                android:text="3"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnSubtract"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="-"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btn0"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="0"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnClear"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="C"
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnEquals"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="="
                android:textColor="#50907A" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/CalcButton"
                android:layout_margin="4dp"
                android:backgroundTint="#00BCD4"
                android:text="+"
                android:textColor="#50907A" />
        </GridLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/light_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/ConverterNavigator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="65dp"
            app:layout_constraintStart_toStartOf="@id/Footer"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/converterNav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/converter_icon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Converter" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/homeNavBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/Footer"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/home_icon" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="home" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Calculator buttons layout -->

</androidx.constraintlayout.widget.ConstraintLayout>